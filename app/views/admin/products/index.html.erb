<div class="container">
  <div class="header">
    <h1>Listing Products</h1>

    <%= link_to 'New Product', new_admin_product_path, :class => "btn btn-primary"  %>
  </div>

  <div class="main">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Short description</th>
          <th colspan="3">Controls</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.title %></td>
            <td><%= truncate(strip_tags(product.short_description), length: 80) %></td>
            <td><%= link_to 'Show', admin_product_path(product) %></td>
            <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
            <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
