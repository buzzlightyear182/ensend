<%= form_for([:admin, @tag], html: {:class => "form-horizontal"}) do |f| %>
    <%= show_errors_of(@tag) %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :category_id, Category.all.collect { |c|   [c.name, c.id]}, {prompt: "Please select which category it belongs to"}, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
