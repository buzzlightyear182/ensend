<div class="container">
  <h1>Listing Tags</h1>
  <%= link_to 'New Tag', new_admin_tag_path, :class => "btn btn-primary"  %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Tag Name</th>
        <th>Category</th>
        <th colspan='2'>Controls</th>
      </tr>
    </thead>

    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
          <td><%= tag.category.name %></td>
          <td><%= link_to 'Edit', edit_admin_tag_path(tag) %></td>
          <td><%= link_to 'Destroy', admin_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
